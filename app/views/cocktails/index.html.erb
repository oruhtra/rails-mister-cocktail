<div class="banner">
  <div class="banner-content">
      <%= link_to "Add a cocktail", new_cocktail_path, class: 'button'%>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2 class="text-center list-title"><em>List of all our cocktails</em></h2>
      <% @cocktails.each do |c| %>
        <div class="col-xs-4">
          <%= link_to cocktail_path(c) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo, width: 300, height: 200%>')">
              <div class="card-category"><%= c.name %></div>
              <div class="card-description">
                <p><%= c.description[0..35] %>...</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>

